<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title >@ViewBag.Title - WEPBANQUANAO</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: url('@Url.Content("~/images/4.png")') no-repeat center center fixed;
            background-size: cover;
        }

        .navbar {
            background: rgba(0, 0, 0, 0.8);
            padding: 10px 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-size: 1.75rem;
            font-weight: bold;
            color: black !important;
        }

        .navbar-nav .nav-link {
            color: black !important;
            font-weight: 500;
            transition: color 0.3s, transform 0.3s;
        }

        .navbar-nav .nav-link:hover {
            color: #ffe135 !important;
            transform: scale(1.1);
        }

        .container {
            margin-top: 20px;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .footer {
            background-color: #343a40;
            color: white;
            padding: 20px 0;
            text-align: center;
            margin-top: 20px;
        }

        .footer p {
            margin: 0;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark">
        <div class="container">
            <h1 style="color: black;">@ViewBag.Title  WEPBANQUANAO</h1>

            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Home")" class="nav-link">
                            <img src="~/images/16.svg" alt="Home Icon" width="16" height="16"> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "NQM_Users")" class="nav-link">
                            <img src="~/images/15.svg" alt="User Icon" width="16" height="16"> Người Dùng
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "NQM_Products")" class="nav-link">
                            <img src="~/images/11.svg" alt="Product Icon" width="16" height="16"> Sản Phẩm
                        </a>
                    </li>

                    <li class="nav-item">
                        <a href="@Url.Action("Index", "NQM_Order_Items")" class="nav-link">
                            <img src="~/images/12.svg" alt="Payment Icon" width="16" height="16"> Thanh Toán
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "NQM_Customer_Support")" class="nav-link">
                            <img src="~/images/13.svg" alt="Support Icon" width="16" height="16"> Hỗ Trợ Người Dùng
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "NQM_Categories")" class="nav-link">
                            <img src="~/images/14.svg" alt="Category Icon" width="16" height="16"> Danh Mục Sản Phẩm
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="footer">
            <p>&copy; @DateTime.Now.Year - WEPBANQUANAO</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
